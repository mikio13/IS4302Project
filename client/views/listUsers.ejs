<!DOCTYPE html>
<html>

<head>
    <title>List of Users</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>

<body class="p-4">
    <h1>All Users</h1>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Name</th>
                <th>Hashed NRIC</th>
                <th>Created</th>
                <th>QR</th>
            </tr>
        </thead>
        <tbody>
            <% users.forEach(user=> { %>
                <tr>
                    <td>
                        <%= user.name %>
                    </td>
                    <td>
                        <%= user.hashedNRIC %>
                    </td>
                    <td>
                        <%= user.created %>
                    </td>
                    <td>
                        <a href="/customers/<%= user._id %>/qr" class="btn btn-sm btn-success">Generate QR</a>
                    </td>
                </tr>
                <% }) %>
        </tbody>
    </table>
</body>

</html>