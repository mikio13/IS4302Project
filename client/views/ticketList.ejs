<!-- ticketsList.ejs -->
<!DOCTYPE html>
<html>

<head>
    <title>Tickets List</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>

<body class="p-4">
    <h1>Tickets</h1>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Ticket ID</th>
                <th>Buyer</th>
                <th>Status</th>
                <th>Block</th>
                <th>Timestamp</th>
            </tr>
        </thead>
        <tbody>
            <% tickets.forEach(ticket=> { %>
                <tr>
                    <td>
                        <%= ticket.ticketId %>
                    </td>
                    <td>
                        <%= ticket.buyer %>
                    </td>
                    <td>
                        <%= ticket.status %>
                    </td>
                    <td>
                        <%= ticket.blockNumber %>
                    </td>
                    <td>
                        <%= ticket.timestamp %>
                    </td>
                </tr>
                <% }) %>
        </tbody>
    </table>

    <a href="/" class="btn btn-secondary">Home</a>
</body>

</html>